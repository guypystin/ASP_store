<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" href="/css/MainPage_Layout.css">
    <title>Sport store</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <a class="navbar-brand" href="#">ASP_store</a>
        <div class="row">
                <div class="col-4 text-right">
                    @await Component.InvokeAsync("CartSummary")
                </div>
        </div>
    </div>
    <div class="content container">
        <div id="categories" class="content-left col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="content-right col">
            @RenderBody()
        </div>
    </div>
</body>
</html>
